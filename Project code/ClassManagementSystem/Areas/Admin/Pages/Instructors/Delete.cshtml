@page "{id}"
@model ClassManagementSystem.Areas.Admin.Pages.Instructors.DeleteModel
@{
    ViewData["Title"] = "Delete Instructor";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
  <div class="col-md-6">
    <div class="alert alert-warning" role="alert">
      <strong>Warning:</strong> You are about to delete  
      <span class="fw-bold">@Model.UserToDelete.Email</span>.
    </div>

    <form method="post">
      <div class="d-flex">
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
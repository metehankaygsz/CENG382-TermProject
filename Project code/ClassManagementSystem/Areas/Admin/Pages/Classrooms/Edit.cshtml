@page
@model ClassManagementSystem.Areas.Admin.Pages.Classrooms.EditModel
@{
    ViewData["Title"] = "Edit Classroom";
}

<h1 class="mb-4">Edit Classroom</h1>

<div class="card mb-4">
  <div class="card-body">
    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
      <input type="hidden" asp-for="Classroom.Id" />

      <div class="mb-3">
        <label asp-for="Classroom.Name" class="form-label">Name</label>
        <input asp-for="Classroom.Name" class="form-control" />
        <span asp-validation-for="Classroom.Name" class="text-danger"></span>
      </div>

      <div class="d-flex">
        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
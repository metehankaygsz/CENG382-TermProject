@model ClassManagementSystem.Areas.Instructor.Pages.Feedback.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.ClassroomId" class="control-label"></label>
                <select asp-for="Feedback.ClassroomId" class ="form-control" asp-items="ViewBag.ClassroomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.InstructorName" class="control-label"></label>
                <input asp-for="Feedback.InstructorName" class="form-control" />
                <span asp-validation-for="Feedback.InstructorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Rating" class="control-label"></label>
                <input asp-for="Feedback.Rating" class="form-control" />
                <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Comments" class="control-label"></label>
                <input asp-for="Feedback.Comments" class="form-control" />
                <span asp-validation-for="Feedback.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.SubmittedOn" class="control-label"></label>
                <input asp-for="Feedback.SubmittedOn" class="form-control" />
                <span asp-validation-for="Feedback.SubmittedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@page "/Instructor"
@model ClassManagementSystem.Areas.Instructor.Pages.IndexModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<h1 class="mb-4">@ViewData["Title"]</h1>
<p class="lead mb-4">
    You have <strong>@Model.TotalReservations</strong> class reservations in this term total.
</p>

<div class="row g-4">

  <!-- Total Reservations -->
  <div class="col-md-2">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <i class="bi bi-list-check display-4 text-primary mb-2"></i>
        <h6 class="text-muted">Total</h6>
        <h3>@Model.TotalReservations</h3>
      </div>
    </div>
  </div>

  <!-- Approved -->
  <div class="col-md-2">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <i class="bi bi-check-circle display-4 text-success mb-2"></i>
        <h6 class="text-muted">Approved</h6>
        <h3>@Model.ApprovedCount</h3>
      </div>
    </div>
  </div>

  <!-- Pending -->
  <div class="col-md-2">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <i class="bi bi-hourglass-split display-4 text-warning mb-2"></i>
        <h6 class="text-muted">Pending</h6>
        <h3>@Model.PendingCount</h3>
      </div>
    </div>
  </div>

  <!-- Rejected -->
  <div class="col-md-2">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <i class="bi bi-x-circle display-4 text-danger mb-2"></i>
        <h6 class="text-muted">Rejected</h6>
        <h3>@Model.RejectedCount</h3>
      </div>
    </div>
  </div>

  <!-- Next Holiday -->
  <div class="col-md-4">
    <div class="card text-center h-100 shadow-sm border-warning">
      <div class="card-body">
        <i class="bi bi-calendar-event display-4 text-warning mb-2"></i>
        <h6 class="text-muted">Next Holiday</h6>
        @if (Model.NextHolidayDate.HasValue)
        {
            <h5 class="mb-1">@Model.NextHolidayName</h5>
            <small class="text-muted">@Model.NextHolidayDate</small>
        }
        else
        {
            <h5 class="mb-0">None</h5>
        }
      </div>
    </div>
  </div>
</div>

<hr class="my-5" />

<div class="row g-4">
  <div class="col-md-6">
    <a asp-area="Instructor" asp-page="/Reservations/Index"
       class="card text-decoration-none h-100 shadow-sm">
      <div class="card-body text-center">
        <i class="bi bi-calendar-check display-4 mb-2 text-success"></i>
        <h5 class="card-title">My Reservations</h5>
        <p class="text-muted mb-0">Create, view, and manage your reservations</p>
      </div>
    </a>
  </div>
  <div class="col-md-6">
    <a asp-area="Instructor" asp-page="/Feedback/Index"
       class="card text-decoration-none h-100 shadow-sm">
      <div class="card-body text-center">
        <i class="bi bi-chat-dots display-4 mb-2 text-info"></i>
        <h5 class="card-title">My Feedback</h5>
        <p class="text-muted mb-0">Manage your feedback and ratings</p>
      </div>
    </a>
  </div>
</div>
@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to ClassReserve";
}

@section Styles {
  <style>
    .feature-icon {
      font-size: 2.5rem;
      color: #0d6efd;
      margin-bottom: 1rem;
    }
  </style>
}

<div class="hero text-center">
  <div class="container">
    <h1 class="display-3 fw-light">Class Reservation System</h1>
    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-primary me-2">
      <i class="bi bi-box-arrow-in-right"></i> Login
    </a>
  </div>
</div>

<div class="container py-5">
  <h2 class="text-center mb-4">Key Features</h2>
  <div class="row g-4">
    <div class="col-md-4 text-center">
      <i class="bi bi-calendar-event-fill feature-icon"></i>
      <h5>Interactive Calendar</h5>
      <p>Visualize all your reservations at a glance, with color-coded statuses for approved, pending, holidays & conflicts.</p>
    </div>
    <div class="col-md-4 text-center">
      <i class="bi bi-pencil-square feature-icon"></i>
      <h5>Quick CRUD Forms</h5>
      <p>Create, edit or delete reservations and academic terms.</p>
    </div>
    <div class="col-md-4 text-center">
      <i class="bi bi-star-half feature-icon"></i>
      <h5>Instructor Feedback</h5>
      <p>Gather and review classroom feedback with star-rating summaries to keep improving your classes.</p>
    </div>
  </div>
</div>